<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.cardview.widget.CardView
        android:layout_marginBottom="15dp"
        android:layout_marginTop= "5dp"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp"
        app:cardCornerRadius="30dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_marginBottom="10dp"
        android:layout_marginTop= "10dp"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp"
        android:background="@android:color/transparent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <RelativeLayout
            android:id="@+id/rl1_vcust"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageButton
                android:id="@+id/iv_vcust"
                android:layout_width="75dp"
                android:layout_height="75dp"
                android:background="@android:color/transparent"
                android:src="@drawable/ic_launcher_background"
                android:layout_alignParentLeft="true"
                android:scaleType="fitCenter"
                />


            <GridLayout
                android:rowCount="4"
                android:columnCount="2"
                android:paddingVertical="10dp"
                android:layout_centerHorizontal="true"
                android:layout_width="wrap_content"
                android:layout_height="75dp">


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="14dp"
                    android:textColor="#442C2e"
                    android:text="Customer ID"
                    android:layout_row="0"
                    android:layout_column="0"
                    android:id="@+id/label_vcustid"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Customer ID"
                    android:textSize="14dp"
                    android:textColor="#442C2e"
                    android:layout_row="0"
                    android:layout_column="1"
                    android:id="@+id/tv_vcustid"/>

                <TextView
                    android:text="Customer Name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="14dp"
                    android:layout_marginRight="15dp"
                    android:textColor="#442C2e"
                    android:layout_row="1"
                    android:layout_column="0"
                    android:id="@+id/label_vcustname"/>

                <TextView
                    android:text="Customer Name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="14dp"
                    android:textColor="#442C2e"
                    android:layout_row="1"
                    android:layout_column="1"
                    android:id="@+id/tv_vcustname"/>

                <TextView
                    android:text="Mobile No."
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="14dp"
                    android:layout_marginRight="15dp"
                    android:textColor="#442C2e"
                    android:layout_row="2"
                    android:layout_column="0"
                    android:id="@+id/label_vcustnum"/>

                <TextView
                    android:text="Mobile No."
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="14dp"
                    android:textColor="#442C2e"
                    android:layout_row="2"
                    android:layout_column="1"
                    android:id="@+id/tv_vcustnum"/>

            </GridLayout>


        </RelativeLayout>

        <TextView
            android:id="@+id/tv_view"
            android:layout_alignParentEnd="true"
            android:layout_width="wrap_content"
            android:text="View"
            android:layout_marginTop="25dp"
            android:layout_marginRight="5dp"
            android:background="@color/teal_200"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true" />

    </RelativeLayout>
    </androidx.cardview.widget.CardView>

</RelativeLayout>