<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".customer.features.fragments.NotifyFragment">

    <RelativeLayout
        android:id="@+id/rl_notify"
        android:background="@drawable/prime_back"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.appcompat.widget.Toolbar
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:id="@+id/tb_notify"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            app:navigationIcon="@drawable/ic_baseline_arrow_back"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:background="@android:color/transparent"
            android:elevation="0dp"
            app:title="Notification"
            android:layout_alignParentTop="true"
            android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
            app:popupTheme="@style/ThemeOverlay.AppCompat.Light"/>

        <androidx.cardview.widget.CardView
            android:id="@+id/card_notify"
            app:cardCornerRadius="30dp"
            android:layout_width="match_parent"
            android:layout_height="fill_parent"
            android:layout_below="@+id/tb_notify"
            android:layout_alignParentBottom="true"
            android:layout_marginVertical="15dp"
            android:layout_marginBottom="16dp"
            android:background="@drawable/cart_corner"
            android:padding="15dp"
            app:cardElevation="15dp">

        </androidx.cardview.widget.CardView>
    </RelativeLayout>
</FrameLayout>