<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_marginBottom="5dp"
        android:layout_marginTop= "10dp"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:id="@+id/rl1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageButton
                android:id="@+id/ib_stock"
                android:layout_width="75dp"
                android:layout_height="75dp"
                android:background="@android:color/transparent"
                android:src="@drawable/ic_launcher_background"
                android:layout_alignParentLeft="true"
                android:scaleType="fitCenter"
                />
            <GridLayout
                android:rowCount="4"
                android:columnCount="2"
                android:paddingVertical="10dp"
                android:layout_marginLeft="120dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="14dp"
                    android:textColor="@color/black"
                    android:text="ID"
                    android:layout_row="0"
                    android:layout_column="0"
                    android:id="@+id/label_stockid"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Product id"
                    android:textSize="14dp"
                    android:textColor="@color/black"
                    android:layout_row="0"
                    android:layout_column="1"
                    android:id="@+id/tv_stockid"/>
                <TextView
                    android:text="Name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="14dp"
                    android:layout_marginRight="15dp"
                    android:textColor="@color/black"
                    android:layout_row="1"
                    android:layout_column="0"
                    android:id="@+id/label_stockname"/>
                <TextView
                    android:text="Product Name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="14dp"
                    android:textColor="@color/black"
                    android:layout_row="1"
                    android:layout_column="1"
                    android:id="@+id/tv_stockname"/>
                <TextView
                    android:text="Quantity   "
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="14dp"
                    android:textColor="@color/black"
                    android:layout_row="2"
                    android:layout_column="0"
                    android:id="@+id/label_stockqut"/>
                <TextView
                    android:text="Price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="14dp"
                    android:textColor="@color/black"
                    android:layout_row="2"
                    android:layout_column="1"
                    android:id="@+id/tv_stockqut"/>

            </GridLayout>
            <LinearLayout
                android:layout_alignParentRight="true"
                android:layout_width="wrap_content"
                android:orientation="vertical"
                android:layout_height="wrap_content">
           <!-- <ImageButton
                android:id="@+id/ib_add"
                android:layout_marginBottom="5dp"
                android:layout_marginLeft="12dp"
                android:src="@drawable/ic_baseline_add"
                android:layout_width="wrap_content"
                android:background="@android:color/transparent"
                android:backgroundTint="@color/white"
                android:layout_height="0dp"
                android:layout_weight="1"
                />
            <EditText
                android:id="@+id/et_disstock"
                android:layout_width="50dp"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:textAlignment="center"
                android:text="100"
                android:background="@android:color/transparent"
                android:gravity="center_horizontal" />
            <ImageButton
                android:id="@+id/ib_minus"
                android:layout_marginTop="2dp"
                android:layout_marginLeft="13dp"
                android:src="@drawable/ic_baseline_remove_24"
                android:layout_width="wrap_content"
                android:backgroundTint="@color/white"
                android:background="@android:color/transparent"
                android:layout_height="0dp"
                android:layout_weight="1"
                />-->
            </LinearLayout>
        </RelativeLayout>
    </RelativeLayout>


</RelativeLayout>