<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/newbg"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".customer.staff.fragments.StaffVcustFragment">

  <RelativeLayout
      android:id="@+id/rl_vcust"
      android:layout_width="match_parent"
      android:layout_height="match_parent">


      <androidx.appcompat.widget.Toolbar
          xmlns:android="http://schemas.android.com/apk/res/android"
          android:id="@+id/tb_vcust"
          app:titleTextColor="@color/white"
          android:layout_width="match_parent"
          android:layout_height="?attr/actionBarSize"
          xmlns:app="http://schemas.android.com/apk/res-auto"
          android:background="@android:color/transparent"
          android:elevation="0dp"
          app:title="View Customers"
          android:layout_alignParentTop="true"
          android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
          app:popupTheme="@style/ThemeOverlay.AppCompat.Light"/>


      <androidx.cardview.widget.CardView
          app:cardElevation="15dp"
          android:padding="15dp"
          android:layout_marginVertical="15dp"
          android:layout_below="@+id/tb_vcust"
          app:cardCornerRadius="30dp"
          android:layout_width="match_parent"
          android:layout_height="match_parent">



              <androidx.recyclerview.widget.RecyclerView
                  android:id="@+id/rv_vcust"
                  android:layout_width="match_parent"
                  android:layout_height="match_parent"/>



      </androidx.cardview.widget.CardView>


  </RelativeLayout>

</FrameLayout>