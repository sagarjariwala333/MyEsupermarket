<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="@color/white"
    android:layout_height="wrap_content">

        <RelativeLayout
            android:layout_marginBottom="5dp"
            android:layout_marginTop= "10dp"
            android:layout_marginRight="10dp"
            android:layout_marginLeft="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


            <RelativeLayout
                android:id="@+id/rl1_vord"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageButton
                    android:id="@+id/iv_vord"
                    android:layout_width="75dp"
                    android:layout_height="75dp"
                    android:background="@android:color/transparent"
                    android:src="@drawable/ic_launcher_background"
                    android:layout_alignParentLeft="true"
                    android:scaleType="fitCenter"
                    />


                <GridLayout
                    android:rowCount="4"
                    android:columnCount="2"
                    android:paddingVertical="10dp"
                    android:layout_centerHorizontal="true"
                    android:layout_width="wrap_content"
                    android:layout_height="75dp">


                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="14dp"
                        android:textColor="#442C2e"
                        android:text="Product ID"
                        android:layout_row="0"
                        android:layout_column="0"
                        android:id="@+id/label_vordid"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Product id"
                        android:textSize="14dp"
                        android:textColor="#442C2e"
                        android:layout_row="0"
                        android:layout_column="1"
                        android:id="@+id/tv_vordid"/>

                    <TextView
                        android:text="Product Name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="14dp"
                        android:layout_marginRight="15dp"
                        android:textColor="#442C2e"
                        android:layout_row="1"
                        android:layout_column="0"
                        android:id="@+id/label_vordname"/>

                    <TextView
                        android:text="Product Name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="14dp"
                        android:textColor="#442C2e"
                        android:layout_row="1"
                        android:layout_column="1"
                        android:id="@+id/tv_vordname"/>

                    <TextView
                        android:text="Type"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="14dp"
                        android:layout_marginRight="15dp"
                        android:textColor="#442C2e"
                        android:layout_row="2"
                        android:layout_column="0"
                        android:id="@+id/label_vordtype"/>

                    <TextView
                        android:text="Quantity"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="14dp"
                        android:textColor="#442C2e"
                        android:layout_row="2"
                        android:layout_column="1"
                        android:id="@+id/tv_vordtype"/>

                    <!--  -->

                </GridLayout>

                <TextView
                    android:id="@+id/tv_vordqut"
                    android:text="Q-100"
                    android:layout_marginRight="10dp"
                    android:textSize="20dp"
                    android:textColor="#442C2e"
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true"
                    android:layout_alignParentRight="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>


            </RelativeLayout>


        </RelativeLayout>


</RelativeLayout>