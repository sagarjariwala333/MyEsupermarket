<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/newbg"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".customer.admin.fragments.fragment_Staff">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/ic_baseline_edit">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/tb_manage_staff"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:theme="@style/Theme.AppCompat.Light.DarkActionBar"
        app:popupTheme="@style/Theme.AppCompat.Light"
        android:elevation="16dp"
        app:titleTextColor="@color/white"
        android:background="@android:color/transparent"
        app:title="Manage Staff"/>


    <androidx.cardview.widget.CardView
        android:layout_below="@+id/tb_manage_staff"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:cardCornerRadius="30dp"
        app:cardElevation="50dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_staff"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>


            <com.google.android.material.floatingactionbutton.FloatingActionButton
                android:id="@+id/fab_staff_add"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/newbg"
                android:layout_alignParentRight="true"
                android:layout_alignParentBottom="true"
                android:layout_marginRight="8dp"
                android:layout_marginBottom="69dp"
                android:src="@drawable/ic_baseline_add_24" />

        </RelativeLayout>
    </androidx.cardview.widget.CardView>
    </RelativeLayout>
</FrameLayout>